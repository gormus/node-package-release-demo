{
  "name": "@gormus/package-release-demo",
  "description": "A demo for creating automated releases for a node package",
  "version": "0.0.0",
  "keywords": [
    "demo",
    "node",
    "npm",
    "semver",
    "release",
    "publish"
  ],
  "license": "MIT",
  "author": {
    "name": "Osman Gormus",
    "email": "osman@gorm.us",
    "url": "https://gorm.us"
  },
  "homepage": "https://github.com/gormus/node-package-release-demo#readme",
  "bugs": {
    "url": "https://github.com/gormus/node-package-release-demo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gormus/node-package-release-demo.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "tag": "latest"
  },
  "release": {
    "branches": [
      "main",
      "(v?(?:\\d*\\.)?(?:\\d*)\\.\\x)",
      {
        "name": "alpha",
        "prerelease": true
      },
      {
        "name": "beta",
        "prerelease": true
      }
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "eslint",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "eslint",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ]
    ]
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": "Use npm package manager.",
    "npm": ">=10.9.0",
    "yarn": "Use npm package manager.",
    "bun": "Use npm package manager."
  },
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "hono": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "conventional-changelog-eslint": "^6.0.0",
    "esbuild": "^0.25.0",
    "semantic-release": "^24.2.2",
    "tsx": "^4.19.2"
  }
}
